@model List<RestaurantProduct>

<header>
    <div class="navbar">
        <div class="top">
            <a class="burgermenu" href="../BurgerMenu/burgermenu.html">
                <img src="./../../Assets/Icons/burger-bar.png" alt="" />
            </a>
            <a class="logo" href="../Home/home.html">
                <img src="./../../Assets/Icons/burger-king.png" alt="" />
            </a>
            <div class="buttons">
                <a class="account" href="../Sign-Up/signup.html ">
                    <button>Sign Up/Sing In</button>
                </a>
                <a class="basket" href="../Sign-Up/signup.html">
                    <button>
                        <img src="./../../Assets/Icons/basket.png" alt="" />
                        $0.00
                    </button>
                </a>
            </div>
        </div>
        <div class="bottom">
            <a href="../Locations/location.html">
                <img src="../../Assets/Icons/map.png" alt="" />
                <span>For availability</span>
                <span>Choose location</span>
            </a>
        </div>
    </div>
</header>
<section class="section-detail-bg">
    <div></div>
</section>
<section class="section-detail-info">
    @foreach (RestaurantProduct product in Model)
    {
        
        <div>
            <img src="../../Assets/Images/@product.Product.Image" alt="" />
            <div class="detail-info">
                <h4>@product.Product.Title</h4>
                <div>
                    <span>$@product.Product.Price</span>
                    <p>@product.Product.Calory cal</p>
                </div>
            </div>
        </div>
    }
</section>
<div class="form-section">
    <form>
        <div class="form">
            <h4>Standart Drink Size</h4>
            <div class="size">
                <label>
                    <div class="infos">
                        <img src="../../Assets/Icons/small-drink-size.webp" alt="" />
                        <div class="info">
                            <span>Small</span>
                            <span>100 cal</span>
                        </div>
                    </div>
                    <input required type="radio" name="gender" value="male" />
                </label>
            </div>
            <div class="size">
                <label>
                    <div class="infos">
                        <img src="../../Assets/Icons/small-drink-size.webp" alt="" />
                        <div class="info">
                            <span>Medium</span>
                            <span>150 cal</span>
                        </div>
                    </div>
                    <input required type="radio" name="gender" value="female" />
                </label>
            </div>
            <div class="size">
                <label>
                    <div class="infos">
                        <img src="../../Assets/Icons/small-drink-size.webp" alt="" />
                        <div class="info">
                            <span>Large</span>
                            <span>200 cal</span>
                        </div>
                    </div>
                    <input required type="radio" name="gender" value="other" />
                </label>
            </div>
        </div>
        <section class="section-selected-detail-order">
            @foreach (RestaurantProduct restaurantProduct in Model)
            {
                <div>
                <div class="detail-order">
                    <div class="top">
                        <span>Your Order</span>
                    </div>
                    <div class="middle">
                        <div class="order">
                            <div class="left">
                                <img src="../../Assets/Images/@restaurantProduct.Product.Image" alt="" />
                                <div class="info">
                                    <span>@* Small  *@@restaurantProduct.Product.Title</span>
                                    <p>@restaurantProduct.Product.Calory cal</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
        </section>
