<section class="section-detail-bg">
    <div></div>
</section>
<section class="section-detail-info">

    <div>
        <img src="../../Assets/Images/@Model.Product.Image" alt="" />
        <div class="detail-info">
            <h4>@Model.Product.Title</h4>
            <div>
