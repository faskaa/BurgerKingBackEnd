<div class="delivery-job-hiring-header">
    <div>
        <div>
            <a asp-controller="home" asp-action="index">
                <button><img src="../../Assets/Icons/close.png" alt="" /></button>
            </a>
        </div>
        <div>
            <div>Join Our Team</div>
        </div>
        <div></div>
    </div>
</div>
<div class="div">
    <form class="delivery-job-hiring" asp-controller="Delivery" asp-action="AddCourier" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required />

        <label for="phone">Phone Number:</label>
        <input type="tel"
               id="phone"
               name="phone"
               pattern="[0-9]{10}"
               required />

 
        <label for="license">Driver's License Number:</label>
        <input type="text" id="license" name="license" required />

        <label for="experience">Driving Experience (years):</label>
        <input type="number"
               id="experience"
               name="experience"
               min="0"
               required />

        <label for="vehicle">Vehicle Type:</label>
        <select id="vehicle" name="vehicle" required>
            <option value="car">Car</option>
            <option value="motorcycle">Motorcycle</option>
            <option value="van">Van</option>
        </select>

        <button type="submit">Submit</button>
    </form>
</div>