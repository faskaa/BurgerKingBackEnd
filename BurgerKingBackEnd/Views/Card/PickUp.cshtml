@model CardVM
<div class="card-header">
    <div class="left">
        <a asp-controller="home" asp-action="index">
            <img src="../../Assets/Icons/close.png" alt="" />
        </a>
    </div>
    <div class="right">
        <h4>Order Pick Up</h4>
    </div>
</div>
<div class="pickup-form-wrapper">
    <form asp-controller="Order" asp-action="PickUp" method="post">
        <div class="restoran-details">
            <h4>Restaurant Details</h4>
            <div class="detail">
                <span>Pick Up</span>
            </div>
            @if (Model.cardItems.Count>0)
            {
                <div class="form">
                    <label>
                        <input required type="radio" name="option" value="Drive Thru" />Drive Thru
                    </label>
                    <label>
                        <input required type="radio" name="option" value="Pick Up" />Pick Up
                    </label>
                    <label>
                        <input required type="radio" name="option" value="Dine In" />Dine In
                    </label>
                </div>
            }
            else{
                <div style="opacity:0.5" class="form">
                    <label>
                        <input style="cursor:not-allowed" required type="radio" disabled name="option" value="Drive Thru" />Drive Thru
                    </label>
                    <label>
                        <input style="cursor:not-allowed" required type="radio" disabled name="option" value="Pick Up" />Pick Up
                    </label>
                    <label>
                        <input style="cursor:not-allowed" required type="radio" disabled name="option" value="Dine In" />Dine In
                    </label>
                </div>

            }
        </div>
        <div class="orders-wrapper">
            <h4>Your Card</h4>
            <div class="orders">
                @foreach (var item in Model.cardItems)
                {
                    <div class="order ">
                        <div class="top">
                            <span class="name">@item.Title</span>
                        </div>
                        <div class="mid">
                            <span class="total-price">Item Total</span>
                            <span class="price">$@item.Price</span>
                        </div>
                    </div>
                        
                }
            </div>
            <div>
                <a asp-controller="Menu" asp-action="Index" asp-route-Id="@Model.RestaurantId">
                    <button type="button">+ Add Items</button>
                </a>
            </div>
            @if (Model.cardItems.Count>0)
            {
                
            <div>
                <a  asp-controller="Menu" asp-action="DeletePickupCardItem" asp-route-Id="@Model.RestaurantId">
                    <button type="button">- Delete Items</button>
                </a>

            </div>
            }
 @*            <a asp-controller="Menu" asp-action="Index" asp-route-Id="@Model.RestaurantId">
                <button type="button">+ Add Items</button>
            </a>
            <a style="text-decoration:none" asp-controller="Menu" asp-action="Index" asp-route-Id="@Model.RestaurantId">
                <button type="button">- Delete Items</button>
            </a>
             *@
        </div>
        <div class="taxs-wrapper">
            <div class="taxs">

                <div class="total-tax">
                    <span>Total</span>
                    <span> 
                        @Model.TotalPrice
                    </span>
                </div>
            </div>
        </div>
        <div class="submit-wrapper">
            @if (Model.cardItems.Count>0)
            {
                <a href="#">
                    <input class="submit-btn" type="submit" placeholder="Continue" name="Continue" id="" />
                </a>

            }
            else
            {
                <a href="#">
                    <input style="background-color:gray;opacity:0.5;cursor:not-allowed" class="submit-btn" type="button" placeholder="Continue" value="Please select items" name="Continue" id="" />
                </a>
            }
        </div>
        <!-- <button type="submit">Submit</button> -->
    </form>
</div>