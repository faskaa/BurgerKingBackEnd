<div class="payment-header">
    <div class="left">
        <a asp-controller="home" asp-action="index">
            <img src="../../Assets/Icons/close.png" alt="" />
        </a>
    </div>
    <div class="right">
        <h4>Order Payment</h4>
    </div>
</div>
<form class="payment" asp-controller="Order" asp-action="PickUpPayment" method="post">
    <div>
        <h4>Payment Details</h4>
    </div>
    <div>
        <label for="nameOnCard">Name on Card:</label>
        <input type="text" id="nameOnCard" name="nameOnCard" required /><br />
    </div>
    <div>
        <label for="creditCardNumber">Credit Card Number:</label>
        <input type="text"
            @*    id="creditCardNumber" *@
               name="creditCardNumber"
            @*    pattern="[0-9]{16}"
               title="16 digits numeric card number" *@
               required /><br />
    </div>
    <div class="flexs">
        <div>
            <label for="expirationDate">Card Expiration Date:</label>
            <input type="text"
                   id="expirationDate"
                   name="expirationDate"
                   placeholder="MM/YY"
                   pattern="(0[1-9]|1[0-2])\/\d{2}"
                   title="MM/YY format"
                   required />
        </div>
        <div>
            <label for="cvv">CVV:</label>
            <input type="text"
                   id="cvv"
                   name="cvv"
                   pattern="[0-9]{3,4}"
                   title="3 or 4 digits CVV"
                   required /><br />
        </div>
    </div>
    <div>
        <label for="zipcode">Zipcode:</label>
        <input type="text"
               id="zipcode"
               name="zipcode"
               pattern="[0-9]{5}"
               title="5 digits numeric zipcode"
               required /><br />
    </div>
 
    <div>
        <input class="submit-btn" type="submit" value="Submit" />
    </div>
</form>
