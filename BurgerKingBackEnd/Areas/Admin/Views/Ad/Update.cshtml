@model AdUpdateVM
@{
    ViewData["Title"] = "Update";
}

<div class="delivery-job-hiring-header">
    <div>
        <div>
            <a href="">
                <button><img src="../../Assets/Icons/close.png" alt="" /></button>
            </a>
        </div>
        <div>
            <div>Ad Update</div>
        </div>
        <div></div>
    </div>
</div>
<div class="form-container">
    <form asp-area="Admin" asp-controller="Ad" asp-action="Update" enctype="multipart/form-data" method="post">
        <div style="font-size:15px; color: red; font-weight:bold; font-family:'Flame Sans'" asp-validation-summary="All"></div>

        <span>Image</span>
        <img src="~/Assets/Images/@Model.Image" />

        <label asp-for="@Model.Title">Title:</label>
        <input asp-for="@Model.Title" id="username">
        <div>
            <span style="font-size:15px; color:   red; font-family:'Flame Sans'" asp-validation-for="@Model.Title"></span>
        </div>

        <label asp-for="@Model.IImage">Image</label>
        <input asp-for="@Model.IImage" id="username">
        <div>
            <span style="font-size:15px; color:  red; font-family:'Flame Sans'" asp-validation-for="@Model.IImage"></span>
        </div>

        <label asp-for="@Model.Description">Description</label>
        <input asp-for="@Model.Description" id="username">
        <div>
            <span style="font-size:15px; color:  red; font-family:'Flame Sans'" asp-validation-for="@Model.Description"></span>
        </div>

        <button style=" margin-top:20px" type="submit">Submit</button>
    </form>
</div>

